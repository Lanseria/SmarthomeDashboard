doctype html
html(lang='en')
  head
    title=web.title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    // VENDOR CSS
    link(rel='stylesheet', href='/assets/vendor/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/assets/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/assets/vendor/linearicons/style.css')
    link(rel='stylesheet', href='/assets/vendor/chartist/css/chartist-custom.css')
    // MAIN CSS
    link(rel='stylesheet', href='/assets/css/main.css')
    // FOR DEMO PURPOSES ONLY. You should remove this in your project
    link(rel='stylesheet', href='/assets/css/demo.css')
    // GOOGLE FONTS
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700', rel='stylesheet')
    // ICONS
    link(rel='apple-touch-icon', sizes='76x76', href='/assets/img/apple-icon.png')
    link(rel='icon', type='image/png', sizes='96x96', href='/assets/img/favicon.png')
  body
    // WRAPPER
    #wrapper
      // NAVBAR
      nav.navbar.navbar-default.navbar-fixed-top
        .brand
          a(href='index.html')
            img.img-responsive.logo(src='/assets/img/logo-dark.png', alt='Klorofil Logo')
        .container-fluid
          .navbar-btn
            button.btn-toggle-fullwidth(type='button')
              i.lnr.lnr-arrow-left-circle
          form.navbar-form.navbar-left
            .input-group
              input.form-control(type='text', value='', placeholder='Search dashboard...')
              span.input-group-btn
                button.btn.btn-primary(type='button') Go
          .navbar-btn.navbar-btn-right
            a.btn.btn-success.update-pro(href='#downloads/klorofil-pro-bootstrap-admin-dashboard-template/?utm_source=klorofil&utm_medium=template&utm_campaign=KlorofilPro', title='Upgrade to Pro', target='_blank')
              i.fa.fa-rocket
              span 升级到专业版
          #navbar-menu
            ul.nav.navbar-nav.navbar-right
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.lnr.lnr-question-circle
                  span 帮助
                  i.icon-submenu.lnr.lnr-chevron-down
                ul.dropdown-menu
                  li
                    a(href='#') 基本使用
                  li
                    a(href='#') 添加设备
                  li
                    a(href='#') 安全
                  li
                    a(href='#') 其它疑问
              li.dropdown
                if user
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    img.img-circle(src='/assets/img/user.png', alt='Avatar')
                    span #{user.name}
                    i.icon-submenu.lnr.lnr-chevron-down
                  ul.dropdown-menu
                    li
                      a(href='#')
                        i.lnr.lnr-user
                        span 个人设置
                    li
                      a(href='#')
                        i.lnr.lnr-envelope
                        span 信息
                    li
                      a(href='#')
                        i.lnr.lnr-cog
                        span 设置
                    li
                      a(href='/logout')
                        i.lnr.lnr-exit
                        span 退出
                else
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    img.img-circle(src='/assets/img/user.png', alt='Avatar')
                    span 错误
      // END NAVBAR
      // LEFT SIDEBAR
      #sidebar-nav.sidebar
        .sidebar-scroll
          nav
            ul.nav
              each val,index in web.menu
                if(index==0)
                  li
                    a(class=(url===val.url||url==='') ? 'active' : '', href=val.url)
                      i.lnr(class=val.fa)
                      span #{val.name}
                else
                  li
                    a(class=(url===val.url) ? 'active' : '', href=val.url)
                      i.lnr(class=val.fa)
                      span #{val.name}
              li
                a.collapsed(href='#subPages', data-toggle='collapse')
                  i.lnr.lnr-file-empty
                  span Pages
                  i.icon-submenu.lnr.lnr-chevron-left
                #subPages.collapse
                  ul.nav
                    li
                      a(href='#') 个人中心
                    li
                      a(href='/login') 登录页
                    li
                      a(href='#') 锁屏
                    li
                      a(href='/devicetype') 类别添加
      // END LEFT SIDEBAR
      // MAIN
      .main
        // MAIN CONTENT
        block content
        // END MAIN CONTENT
      // END MAIN
      .clearfix
      footer
        .container-fluid
          p.copyright
            | &copy; 2017 
            a(href='#', target='_blank') Theme I Need
            | . All Rights Reserved. More Templates
    // END WRAPPER
    // Javascript
    script(src='/assets/vendor/jquery/jquery.min.js')
    script(src='/assets/vendor/bootstrap/js/bootstrap.min.js')
    script(src='/assets/vendor/jquery-slimscroll/jquery.slimscroll.min.js')
    script(src='/assets/scripts/klorofil-common.js')
    block javascript

