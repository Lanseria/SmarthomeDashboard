extends ../layout

block content
  .main-content
    .container-fluid
      h3.page-title 控制面板
      .row
        each controller in controllers
          .col-md-8
            // PANEL HEADLINE
            .panel.panel-headline
              .panel-heading
                h3.panel-title #{controller.name}#{controller.devicetype.name}
                p.panel-subtitle 设备ID：#{controller.devid}
              .panel-body
                h4 控制操作
                button.btn.btn-primary(type='button') 开启
                button.btn.btn-danger(type='button') 关闭
          // END PANEL HEADLINE
        .col-md-4
          // PANEL NO PADDING
          .panel
            .panel-heading
              h3.panel-title 新风系统运行状况
              .right
                button.btn-toggle-collapse(type='button')
                  i.lnr.lnr-chevron-up
                button.btn-remove(type='button')
                  i.lnr.lnr-cross
